<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :receiver_id, as: :hidden, input_html:
    { value: params[:receiver]} %>
   
    <%= f.input :subject %>
    <%= f.input :message %>
 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
